@page
@model WebAppShares.Pages.BuyProductList.DeleteModel

@{
    ViewData["Title"] = "Видалення";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Видалення</h1>

<h3>
    Ви впевнені, що хочете видалити це?
</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyProduct.FirstName)
        </dd>
        <dt class="col-sm-2">
            Прізвище
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyProduct.LastName)
        </dd>
        <dt class="col-sm-2">
           E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyProduct.Email)
        </dd>
        <dt class="col-sm-2">
            телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyProduct.phoneNumber)
        </dd>
        <dt class="col-sm-2">
            Загальна сума
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyProduct.totalSum)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="BuyProduct.Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-page="./Index">Повернутися назад</a>
    </form>
</div>
